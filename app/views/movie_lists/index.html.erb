<div class="container my-5 p-5 d-flex flex-column align-items-center">
  <h1>Movie Lists</h1>
  <% @lists.each do |list| %>
    <div class="card-category my-3 position-relative" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(http://source.unsplash.com/random/?<%= list.name.split(' ').first %>&<%= rand(100) %>)">
      <%= link_to list.name, movie_list_path(list), class: "stretched-link text-white text-decoration-none" %>
    </div>
  <% end %>
  <%= link_to "Create a new movie list +", new_movie_list_path, class: "btn btn-flat my-3 w-100" %>
</div>
